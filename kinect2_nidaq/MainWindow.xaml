<Window x:Class="kinect2_nidaq.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:kinect2_nidaq"
        xmlns:properties="clr-namespace:kinect2_nidaq.Properties"
        mc:Ignorable="d"
        Title="Kinect2 Nidaq"
        Height="640.909"
        Width="1046.213"
        Loaded="Window_Loaded"
        ResizeMode="CanMinimize"
        Closed="Window_Closed">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Session Settings">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="200" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="20" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="10" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Device" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Bottom"/>
                        <ComboBox Name="DevBox" SelectionChanged="DevBox_SelectionChanged" Grid.Row="2" />
                        <TextBlock Text="Terminal Configuration" Grid.Row="3" TextAlignment="Center" VerticalAlignment="Bottom"/>
                        <ComboBox Name="TerminalConfigBox" Grid.Row="4" />
                        <TextBlock Text="Sampling Rate" Grid.Row="5" TextAlignment="Center" VerticalAlignment="Bottom" />
                        <TextBox Name="SamplingRateBox" Text="{Binding Source={x:Static properties:Settings.Default}, Path=SamplingRate}" TextChanged="SamplingRateBox_TextChanged" Grid.Row="6" />
                        <Button Content="Prepare NIDaq" Name="NidaqPrepare" Click="NidaqPrepare_Click" Grid.Row="8" IsEnabled="False" />
                        <Button Content="Start Session"  Name="StartButton" Click="StartButton_Click"  Grid.Row="10" IsEnabled="False" />
                        <Button Content="Stop Session" Name="StopButton" Click="StopButton_Click" Grid.Row="12" IsEnabled="False" /> 
                    </Grid>
                    <Grid Grid.Column="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="45" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="10" />
                        </Grid.RowDefinitions>
                        <TextBlock Text="Channel Selection" TextAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1" />
                        <ListBox Name="aiChannelList" SelectionMode="Multiple" Grid.Row="2" SelectionChanged="ChannelSelection_Changed" />
                    </Grid>
                    <Grid Grid.Column="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="10" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Session Name" Grid.Column="1" Grid.Row="1" TextAlignment="Center" VerticalAlignment="Bottom"/>
                        <TextBox Name="SessionName" Grid.Column="1" Grid.Row="2" TextChanged="SessionName_TextChanged" Text="{Binding Source={x:Static properties:Settings.Default}, Path=SessionName}" />
                        <TextBlock Text="Subject Name" Grid.Column="1" Grid.Row="3" TextAlignment="Center" VerticalAlignment="Bottom" />
                        <TextBox Name="SubjectName" Grid.Column="1" Grid.Row="4" TextChanged="SubjectName_TextChanged" Text="{Binding Source={x:Static properties:Settings.Default}, Path=SubjectName}" />
                        <TextBlock Text="Save Directory" Grid.Column="1" Grid.Row="5" TextAlignment="Center" VerticalAlignment="Bottom" />
                        <Button Content="..." HorizontalAlignment="Left"  x:Name="StartButton_Copy" Click="SelectDirectory_Click" Grid.Column="0" Grid.Row="6"/>
                        <TextBox Name="FolderName" Grid.Column="1" Grid.Row="6" TextChanged="FolderName_TextChanged" Text="{Binding Source={x:Static properties:Settings.Default}, Path=FolderName}" />
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Kinect Preview">
                <Grid>
                    <Image
                        x:Name="ColorDisplay"
                        Height="424"
                        Width="512"
                        Stretch="UniformToFill"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Left"/>
                    <Image x:Name="DepthDisplay"
                       HorizontalAlignment="Right"
                       Height="424"
                       Width="512"
                       Stretch="UniformToFill"
                       VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
        <Grid Grid.Row="1">
            <StatusBar>
                <StatusBar.ItemsPanel>
                    <ItemsPanelTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="95" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="400" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ItemsPanelTemplate>
                </StatusBar.ItemsPanel>
                <StatusBarItem Grid.Column="0">
                    <ProgressBar Value="0" Width="85" Height="16" Name="StatusBarColor" />
                </StatusBarItem>
                <Separator Grid.Column="1" />
                <StatusBarItem Grid.Column="2">
                    <TextBlock Name="StatusBarFilename" TextAlignment="Center" />
                </StatusBarItem>
                <Separator Grid.Column="3" />
                <StatusBarItem Grid.Column="4">
                    <TextBlock Name="StatusBarFreeSpace" TextAlignment="Center"/>
                </StatusBarItem>
                <Separator Grid.Column="5" />
                <StatusBarItem Grid.Column="6">
                    <TextBlock Name="StatusBarRAM" TextAlignment="Center"/>
                </StatusBarItem>
                <Separator Grid.Column="7" />
                <StatusBarItem Grid.Column="8">
                    <TextBlock Name="StatusBarCPU" TextAlignment="Center" />
                </StatusBarItem>
            </StatusBar>
        </Grid>
    </Grid>
</Window>
